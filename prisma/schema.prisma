// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 用户
model User {
  id       Int      @id @default(autoincrement())
  // 学号
  username String   @unique
  // 姓名
  name     String
  email    String
  // hashed密码
  password String
  role     Role     @default(USER)
  // 报修单
  repairs  Repair[]
}

// 报修单
model Repair {
  id          Int      @id @default(autoincrement())
  // 报修单状态
  status      Status   @default(PENDING)
  // 报修单提交时间
  createdAt   DateTime @default(now())
  // 报修单提交人
  createdBy   User     @relation(fields: [createdById], references: [id])
  createdById Int

  // 报修类型
  type    String
  // 所留电话
  phone   String
  // 报修地点
  address String
  // 报修单内容
  content String
}

// 用户角色
enum Role {
  USER
  ADMIN
}

// 报修单状态
enum Status {
  PENDING // 待处理，黄色
  ACCEPTED // 已接受并派工，紫色
  REJECTED // 已拒绝，红色
  FINISHED // 已完成，绿色
}
